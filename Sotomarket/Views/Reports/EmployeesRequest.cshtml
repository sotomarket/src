
@{
    ViewBag.Title = "Отчет по сотрудникам";
}

<h2>Отчет по сотрудникам</h2>

<hr />
<form method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label for="start" class="control-label col-md-2 required">Начало периода</label>
            <div class="col-md-10">
                <input type="text" data-val-date="Поле Начало периода должно содержать дату." id="start" name="start" class = "form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="start" class="control-label col-md-2 required">Конец периода</label>
            <div class="col-md-10">
                <input type="text" data-val-date="Поле Начало периода должно содержать дату." id="end" name="end" class = "form-control" />
            </div>
        </div>

        <div class="form-group">
            <label for="start" class="control-label col-md-2 required">Сотрудник</label>
            <div class="col-md-10">
                @Html.DropDownList("employeeId",ViewBag.Employees as IEnumerable<SelectListItem>,new { @class = "form-control select2" })
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Отчет" />
    </div>
</form>

